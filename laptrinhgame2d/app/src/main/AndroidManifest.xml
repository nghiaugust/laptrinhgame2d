<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.laptrinhgame2d">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Main Menu Activity (Launcher) -->
        <activity
            android:name=".MainMenuActivity"
            android:screenOrientation="landscape"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ============================================ -->
        <!-- Map Selection Activity (MỚI - ĐÃ THÊM) -->
        <!-- ============================================ -->
        <activity
            android:name=".MapSelectionActivity"
            android:screenOrientation="landscape"
            android:exported="false" />

        <!-- Character Selection Activity -->
        <activity
            android:name=".CharacterSelectionActivity"
            android:screenOrientation="landscape"
            android:exported="false" />

        <!-- Main Game Activity -->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape"
            android:exported="false" />

        <!-- Victory History Activity -->
        <activity
            android:name=".VictoryHistoryActivity"
            android:screenOrientation="landscape"
            android:exported="false" />

    </application>

</manifest>