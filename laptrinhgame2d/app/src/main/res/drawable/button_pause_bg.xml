<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#2980B9"
                android:endColor="#3498DB"
                android:angle="90" />
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#1F618D"/>
        </shape>
    </item>

    <!-- Normal state -->
    <item>
        <shape>
            <gradient
                android:startColor="#3498DB"
                android:endColor="#5DADE2"
                android:angle="90" />
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#2E86C1"/>
        </shape>
    </item>
</selector>