<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true"
    android:focusable="true">

    <!-- Game Over Panel -->
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/game_over_bg"
        android:padding="20dp"
        android:elevation="16dp">

        <!-- Game Over Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GAME OVER"
            android:textColor="#E74C3C"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have been defeated!"
            android:textColor="#ECF0F1"
            android:textSize="15sp"
            android:layout_marginBottom="18dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3" />

        <!-- Continue Button -->
        <Button
            android:id="@+id/continueButton"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:text="⚡ CONTINUE"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_continue_bg"
            android:elevation="8dp"
            android:layout_marginBottom="10dp" />

        <!-- Restart Button -->
        <Button
            android:id="@+id/restartButton"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:text="🔄 RESTART"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_restart_bg"
            android:elevation="8dp"
            android:layout_marginBottom="10dp" />

        <!-- Exit Button -->
        <Button
            android:id="@+id/exitButton"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:text="❌ EXIT"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_exit_bg"
            android:elevation="8dp" />

    </LinearLayout>

</RelativeLayout>
