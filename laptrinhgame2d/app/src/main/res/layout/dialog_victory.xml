<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000">

    <!-- Victory Container -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/victory_bg"
        android:padding="16dp"
        android:elevation="16dp">

        <!-- Victory Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="🎉 VICTORY! 🎉"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:layout_marginBottom="12dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Stats Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#34495E"
            android:padding="10dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MISSION COMPLETE"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ECF0F1"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvCompletionTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏱ Time: 03:45"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2ECC71"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvCharacterUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚔️ Hero: Fighter"
                android:textSize="13sp"
                android:textColor="#ECF0F1"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvEnemiesKilled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💀 Enemies Defeated: 11"
                android:textSize="13sp"
                android:textColor="#ECF0F1"
                android:layout_gravity="center" />

        </LinearLayout>

        <!-- View History Button -->
        <Button
            android:id="@+id/btnViewHistory"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="VIEW HISTORY"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_pause_bg"
            android:layout_marginBottom="8dp"
            android:elevation="4dp" />

        <!-- Play Again Button -->
        <Button
            android:id="@+id/btnPlayAgain"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="PLAY AGAIN"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_pause_bg"
            android:layout_marginBottom="8dp"
            android:elevation="4dp" />

        <!-- Main Menu Button -->
        <Button
            android:id="@+id/btnMainMenu"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="MAIN MENU"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_pause_bg"
            android:elevation="4dp" />

    </LinearLayout>

</RelativeLayout>
